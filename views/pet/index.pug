doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{pageTitle}
        link(rel="stylesheet", href="/css/main.css")
    body
      .list-container 
        h1 A List Of All Pets
        ul
          each pet in pets 
            - const {name, age, type} = pet
            h3 Name: !{name}
            li Age: !{age}
            li Type: !{type}

